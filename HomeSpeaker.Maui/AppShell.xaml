<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeSpeaker.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeSpeaker.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False" >

    <ShellContent
        Title="Start Page"
        ContentTemplate="{DataTemplate local:StartPage}"
        Route="StartPage" />
    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Change Metadata"
        ContentTemplate="{DataTemplate local:ChangeMetadata}"
        Route="ChangeMetadata" />
    <ShellContent
        Title="Edit Playlists"
        ContentTemplate="{DataTemplate local:PlaylistPage}"
        Route="PlaylistPage" />
</Shell>
